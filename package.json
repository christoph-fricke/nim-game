{
  "name": "nim-game",
  "version": "1.0.0",
  "private": true,
  "author": "Christoph Fricke <christoph@frickeonline.de>",
  "description": "An implementation of Nim with XState and React.",
  "repository": "github:christoph-fricke/nim-game",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "prepare": "husky install",
    "start": "rm -rf dist && parcel --https",
    "start:tsc": "tsc --watch",
    "build": "rm -rf dist && parcel build",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier -c .",
    "serve": "serve -l 9000 dist",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "playwright": "playwright test",
    "playwright:headed": "playwright test --headed",
    "playwright:debug": "PWDEBUG=1 playwright test --workers=1"
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@radix-ui/colors": "^0.1.8",
    "@xstate/inspect": "^0.7.0",
    "@xstate/react": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xstate": "^4.33.5",
    "xsystem": "^0.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.1",
    "@swc/core": "^1.3.1",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.8",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@xstate/test": "^1.0.0-alpha.0",
    "eslint": "^8.23.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-mock-extended": "^2.0.7",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "postcss": "^8.4.16",
    "postcss-modules": "^5.0.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "serve": "^14.0.1",
    "typescript": "^4.8.2"
  }
}
